---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="MELS // FACCIONES">
    <div class="content-container">
        <h1>FACCIONES</h1>
        <div class="divider"></div>
        <section id="islero">
            <h2>Servicios M (ISLERO)</h2>
            <p>ACCESO DENEGADO.</p>
        </section>
        <section id="prometheus">
            <h2>Prometheus</h2>
            <p>OBJETIVO NO LOCALIZADO.</p>
        </section>
        <section id="agentes">
            <h2>Agentes libres</h2>
            <p>IDENTIDADES DESCONOCIDAS.</p>
        </section>
    </div>

    <style>
        .content-container {
            max-width: 800px;
            margin: 100px auto 0;
            padding: 2rem;
            color: #ccc;
        }
        h1 {
            color: var(--color-accent);
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }
        h2 {
            color: var(--color-secondary);
            margin-top: 2rem;
            border-left: 3px solid var(--color-accent);
            padding-left: 1rem;
        }
        .divider {
            height: 2px;
            background: var(--color-accent);
            width: 100%;
            margin-bottom: 2rem;
            box-shadow: 0 0 10px var(--color-accent);
        }
    </style>
</Layout>
