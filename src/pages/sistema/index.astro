---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="MELS // SISTEMA">
    <div class="content-container">
        <h1>SISTEMA</h1>
        <div class="divider"></div>
        <section id="bases">
            <h2>Bases del sistema</h2>
            <p>COMPILANDO REGLAS...</p>
        </section>
        <section id="arquetipos">
            <h2>Arquetipos y personajes</h2>
            <p>BASE DE DATOS DE PERSONAL VACÍA.</p>
        </section>
        <section id="mecanicas">
            <h2>Mecánicas y combate</h2>
            <p>SIMULACIÓN TÁCTICA DESCARTADA.</p>
        </section>
    </div>

    <style>
        .content-container {
            max-width: 800px;
            margin: 100px auto 0;
            padding: 2rem;
            color: #ccc;
        }
        h1 {
            color: var(--color-accent);
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }
        h2 {
            color: var(--color-secondary);
            margin-top: 2rem;
            border-left: 3px solid var(--color-accent);
            padding-left: 1rem;
        }
        .divider {
            height: 2px;
            background: var(--color-accent);
            width: 100%;
            margin-bottom: 2rem;
            box-shadow: 0 0 10px var(--color-accent);
        }
    </style>
</Layout>
