---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="MELS // UNIVERSO">
    <div class="content-container">
        <h1>UNIVERSO MUTANT3S</h1>
        <div class="divider"></div>
        <section id="premisa">
            <h2>Premisa del mundo</h2>
            <p>INFORMACIÓN CLASIFICADA. PENDIENTE DE DESCLASIFICACIÓN.</p>
        </section>
        <section id="fenomeno-m">
            <h2>Fenómeno M</h2>
            <p>DATOS INSUFICIENTES.</p>
        </section>
        <section id="tono">
            <h2>Tono y claves narrativas</h2>
            <p>ANÁLISIS EN PROCESO.</p>
        </section>
    </div>

    <style>
        .content-container {
            max-width: 800px;
            margin: 100px auto 0; /* Add top margin for fixed nav */
            padding: 2rem;
            color: #ccc;
        }
        h1 {
            color: var(--color-accent);
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }
        h2 {
            color: var(--color-secondary);
            margin-top: 2rem;
            border-left: 3px solid var(--color-accent);
            padding-left: 1rem;
        }
        .divider {
            height: 2px;
            background: var(--color-accent);
            width: 100%;
            margin-bottom: 2rem;
            box-shadow: 0 0 10px var(--color-accent);
        }
    </style>
</Layout>
