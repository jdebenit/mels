---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="MELS // HISTORIA">
    <div class="content-container">
        <h1>HISTORIA</h1>
        <div class="divider"></div>
        <section id="secreta">
            <h2>Historia secreta</h2>
            <p>ARCHIVOS NO DISPONIBLES.</p>
        </section>
        <section id="cronologia">
            <h2>Cronología unificada</h2>
            <p>LÍNEA TEMPORAL CORRUPTA.</p>
        </section>
        <section id="eventos">
            <h2>Grandes eventos</h2>
            <p>REGISTROS INCOMPLETOS.</p>
        </section>
    </div>

    <style>
        .content-container {
            max-width: 800px;
            margin: 100px auto 0;
            padding: 2rem;
            color: #ccc;
        }
        h1 {
            color: var(--color-accent);
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }
        h2 {
            color: var(--color-secondary);
            margin-top: 2rem;
            border-left: 3px solid var(--color-accent);
            padding-left: 1rem;
        }
        .divider {
            height: 2px;
            background: var(--color-accent);
            width: 100%;
            margin-bottom: 2rem;
            box-shadow: 0 0 10px var(--color-accent);
        }
    </style>
</Layout>
